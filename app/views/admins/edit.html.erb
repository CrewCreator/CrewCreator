<h1><%=@current_user.name%>'s Account</h1>

<%= form_for @current_user do |f| %>

  <%= render "layouts/error", object: @current_user, as: 'object' %>

  <%= f.label "Full Name" %>
  <%= f.text_field :name %>
  <br/><br/>
  <%= f.label "Email" %>
  <%= f.text_field :email %>

  <%= render "layouts/confirm_update", object: @current_user, as: 'object' %>

<% end %>