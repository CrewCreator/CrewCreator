<h1 class="display-4 mt-5 ml-5">Admins</h1>
<% if is_admin_html %>
  <div id='create_admin'>
    <a class="btn btn-success ml-5" href="/admins/new">Create Admin</a>
  </div> 
<% end %>

<table class="table table-striped table-bordered w-50 mx-auto" id='courses'>
  <thead class="thead-dark">
    <tr>
      <th>Admin Name</th>
      <th>Email</th>
      <% if is_admin_html %>
        <th>Removal</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td> <%= admin.name %> </td>
        <td> <%= admin.email %> </td>
        <% if is_admin_html %>
          <td><%= link_to "Remove #{admin.name}", remove_admin_path(admin), :id => admin.id, :method => :get , :class => "btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>