<% if @course.errors.any? or @section.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @course.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>
    <ul>
      <% @section.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div id='main'>
  <h2>Create New Course</h2>
  <form action="/courses" accept-charset="UTF-8" method="post">
    <label for="course_name">Course Name</label> <br>
    <input type="text" name="course[name]" id="course_name" />
    <br>
    <label for="course_code">Code</label> <br>
    <input type="text" name="course[code]" id="course_code" />
    <br>
    <label for="course_description">Description</label> <br>
    <input type="text" name="course[description]" id="course_description" />
    <br>
    <%= label("section_number", "Section Number") %> <br>
    <%= number_field_tag "section[number]", in: 1...9999 %>
    <br> <br>
    <input type="submit" name="commit" value="Save Changes" data-disable-with="Save Changes" id="submit_new_course" />
  </form>
</div>
