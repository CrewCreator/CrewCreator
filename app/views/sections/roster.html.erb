<h1>Roster for Course <%= @section.course.name %> Section <%= @section.number %></h1>

<%= form_for @section, url: {action: "update", id: @section} do |form| %>

  <%= form.fields_for :emails do |builder| %>
    <%= render 'email_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Student Email", form, :emails %>
  
  <%= form.submit "Update Roster" %>
  
<% end %>
